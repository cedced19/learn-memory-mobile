<?xml version="1.0" encoding="utf-8"?>
<widget xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:vs="http://schemas.microsoft.com/appx/2014/htmlapps" id="io.github.cedced19.learnmemorymobile" version="0.0.4" xmlns="http://www.w3.org/ns/widgets" defaultlocale="en-US" android-versionCode="39">
  <name>Learn Memory</name>
  <description>This application use the API of your Learn Memory server to show you your lessons on your mobile phone online and offline.</description>
  <author href="http://cedced19.github.io" email="cedced19@gmail.com">Cédric JUNG</author>
  <content src="index.html" />
  <access origin="*" />
  <preference name="SplashScreen" value="screen" />
  <platform name="android">
    <icon src="res/icons/android/icon-36-ldpi.png" density="ldpi" />
    <icon src="res/icons/android/icon-48-mdpi.png" density="mdpi" />
    <icon src="res/icons/android/icon-72-hdpi.png" density="hdpi" />
    <icon src="res/icons/android/icon-96-xhdpi.png" density="xhdpi" />
  </platform>
  <vs:plugin name="org.apache.cordova.dialogs" version="0.3.0" />
  <vs:plugin name="org.apache.cordova.inappbrowser" version="0.6.0" />
  <vs:plugin name="cordova-plugin-whitelist" version="1.2.1" />
  <vs:plugin name="cordova-plugin-statusbar" version="2.1.0" />
  <preference name="StatusBarOverlaysWebView" value="true" />
  <preference name="StatusBarBackgroundColor" value="#2E214B" />
  <preference name="StatusBarStyle" value="lightcontent" />
</widget>
